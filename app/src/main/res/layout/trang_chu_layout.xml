<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrangChuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTrangChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d8ab7">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnMonNgonMoiNgay"
                android:background="@color/btnNoiBat"
                android:text="@string/btnMonNgonMoiNgay"
                android:textColor="@color/txtBtnNoiBat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnDanhGiaCao"
                android:background="@color/btnNoiBat"
                android:text="@string/btnDanhGiaCao"
                android:textColor="@color/txtBtnNoiBat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnSoiNoi"
                android:background="@color/btnNoiBat"
                android:text="@string/btnSoiNoi"
                android:textColor="@color/txtBtnNoiBat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/btnMucKhac"
                android:background="@color/btnNoiBat"
                android:text="@string/btnMucKhac"
                android:textColor="@color/txtBtnNoiBat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/planets_array"
                android:prompt="@string/planets"
                style="?android:attr/buttonStyle">

            </Spinner>

        </LinearLayout>
        <ListView
            android:id="@+id/listMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

        </ListView>


    </LinearLayout>

</LinearLayout>